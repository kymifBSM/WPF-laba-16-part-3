<NavigationWindow x:Class="WPF_laba_16_part_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_laba_16_part_3"
        mc:Ignorable="d"
        Title="Word Splitter" Height="450" Width="800">
    <NavigationWindow.Content>
        <Page>
            <Grid>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Введите текст:"/>
                    <TextBox x:Name="InputTextBox" Width="200" Margin="0 10"/>
                    <Button Content="Разделить на слова" Click="SplitButton_Click"/>
                </StackPanel>
            </Grid>
        </Page>
    </NavigationWindow.Content>
</NavigationWindow>
